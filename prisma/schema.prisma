// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials login
  role          Role      @default(STUDENT)
  college       String?
  phoneNumber   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts     Account[]
  sessions     Session[]
  lostItems    LostItem[]
  foundItems   FoundItem[]
  notifications Notification[]
  matches      Match[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model LostItem {
  id          String     @id @default(cuid())
  title       String
  description String
  category    Category
  location    String
  dateLost    DateTime
  imageUrl    String?
  status      ItemStatus @default(LOST)
  userId      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  matches Match[]

  @@map("lost_items")
}

model FoundItem {
  id          String     @id @default(cuid())
  title       String
  description String
  category    Category
  location    String
  dateFound   DateTime
  imageUrl    String?
  status      ItemStatus @default(FOUND)
  handedToAdmin Boolean  @default(false)
  userId      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  matches Match[]

  @@map("found_items")
}

model Match {
  id          String      @id @default(cuid())
  lostItemId  String
  foundItemId String
  userId      String
  status      MatchStatus @default(PENDING)
  similarity  Float       @default(0.0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  lostItem  LostItem  @relation(fields: [lostItemId], references: [id], onDelete: Cascade)
  foundItem FoundItem @relation(fields: [foundItemId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([lostItemId, foundItemId])
  @@map("matches")
}

model Notification {
  id        String           @id @default(cuid())
  title     String
  message   String
  type      NotificationType @default(INFO)
  read      Boolean          @default(false)
  userId    String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

enum Role {
  STUDENT
  STAFF
  ADMIN
}

enum Category {
  BOOK
  ELECTRONICS
  ID_CARD
  ACCESSORIES
  CLOTHING
  KEYS
  BAGS
  SPORTS
  OTHER
}

enum ItemStatus {
  LOST
  FOUND
  RESOLVED
  REJECTED
}

enum MatchStatus {
  PENDING
  CONFIRMED
  REJECTED
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  MATCH_FOUND
}
