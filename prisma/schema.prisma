// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials login
  role          Role      @default(STUDENT)
  department    String?   // For coordinators and staff
  coordinatorTitle String? // Role/position (e.g., President, Secretary)
  college       String?
  phoneNumber   String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts     Account[]
  sessions     Session[]
  lostItems    LostItem[]
  foundItems   FoundItem[]
  notifications Notification[]
  matches      Match[]
  books        Book[]
  bookRequests BookRequest[]
  events       Event[]
  eventInterests EventInterest[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetOTP {
  id        String   @id @default(cuid())
  email     String
  otpHash   String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@map("password_reset_otps")
}

model CoordinatorRequest {
  id          String              @id @default(cuid())
  name        String
  email       String              @unique
  department  String
  title       String?             // Role/position in club/department
  phoneNumber String?
  message     String
  status      CoordinatorRequestStatus @default(PENDING)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  reviewedAt  DateTime?
  reviewedBy  String?

  @@map("coordinator_requests")
}

model LostItem {
  id          String     @id @default(cuid())
  title       String
  description String
  category    Category
  location    String
  dateLost    DateTime
  imageUrl    String?
  contactPhone String?
  status      ItemStatus @default(LOST)
  userId      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  matches Match[]

  @@map("lost_items")
}

model FoundItem {
  id          String     @id @default(cuid())
  title       String
  description String
  category    Category
  location    String
  dateFound   DateTime
  imageUrl    String?
  contactPhone String?
  status      ItemStatus @default(FOUND)
  handedToAdmin Boolean  @default(false)
  userId      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  matches Match[]

  @@map("found_items")
}

model Match {
  id          String      @id @default(cuid())
  lostItemId  String
  foundItemId String
  userId      String
  status      MatchStatus @default(PENDING)
  similarity  Float       @default(0.0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  lostItem  LostItem  @relation(fields: [lostItemId], references: [id], onDelete: Cascade)
  foundItem FoundItem @relation(fields: [foundItemId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([lostItemId, foundItemId])
  @@map("matches")
}

model Notification {
  id        String           @id @default(cuid())
  title     String
  message   String
  type      NotificationType @default(INFO)
  read      Boolean          @default(false)
  userId    String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

enum Role {
  STUDENT
  STAFF
  COORDINATOR
  ADMIN
}

enum Category {
  BOOK
  ELECTRONICS
  ID_CARD
  ACCESSORIES
  CLOTHING
  KEYS
  BAGS
  SPORTS
  OTHER
}

enum ItemStatus {
  LOST
  FOUND
  RESOLVED
  REJECTED
}

enum MatchStatus {
  PENDING
  CONFIRMED
  REJECTED
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  MATCH_FOUND
  BOOK_REQUEST
  EVENT_REMINDER
}

model Book {
  id           String           @id @default(cuid())
  title        String
  author       String
  description  String
  condition    BookCondition
  priceOrRent  Float
  type         BookType         @default(RENT)
  imageUrl     String?
  contactPhone String?
  available    Boolean          @default(true)
  ownerUserId  String
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  owner        User             @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)
  requests     BookRequest[]

  @@map("books")
}

model BookRequest {
  id        String           @id @default(cuid())
  bookId    String
  userId    String
  message   String?
  status    RequestStatus    @default(PENDING)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  book      Book             @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bookId, userId])
  @@map("book_requests")
}

model Event {
  id           String      @id @default(cuid())
  title        String
  description  String
  date         DateTime
  time         String
  venue        String
  clubOrDept   String
  postedByUserId String
  contactInfo  String?
  imageUrl     String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  postedBy     User        @relation(fields: [postedByUserId], references: [id], onDelete: Cascade)
  interested   EventInterest[]

  @@map("events")
}

model EventInterest {
  id        String   @id @default(cuid())
  eventId   String
  userId    String
  createdAt DateTime @default(now())

  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@map("event_interests")
}

enum BookCondition {
  NEW
  LIKE_NEW
  GOOD
  FAIR
  POOR
}

enum BookType {
  RENT
  SELL
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum CoordinatorRequestStatus {
  PENDING
  APPROVED
  REJECTED
}
